@model EasyTravel.Domain.Entites.Car

@{
    ViewData["Title"] = "Car Form";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                </div>
                <form method="post" asp-action="@ViewData["Title"]" asp-controller="AdminCar">
                    <div class="card-body">
                        <!-- Operator Name -->
                        <div class="form-group">
                            <label for="OperatorName">Car Operator Name</label>
                            <input asp-for="OperatorName" class="form-control" required />
                            <span asp-validation-for="OperatorName" class="text-danger"></span>
                        </div>

                        <!-- Car Type -->
                        <div class="form-group">
                            <label for="CarType">Car Type</label>
                            <input asp-for="CarType" class="form-control" />
                            <span asp-validation-for="CarType" class="text-danger"></span>
                        </div>

                        <!-- From -->
                        <div class="form-group">
                            <label for="From">From (Starting Point)</label>
                            <input asp-for="From" class="form-control" required />
                            <span asp-validation-for="From" class="text-danger"></span>
                        </div>

                        <!-- To -->
                        <div class="form-group">
                            <label for="To">To (Destination)</label>
                            <input asp-for="To" class="form-control" required />
                            <span asp-validation-for="To" class="text-danger"></span>
                        </div>

                        <!-- Departure Time -->
                        <div class="form-group">
                            <label for="DepartureTime">Departure Time</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-clock"></i></span>
                                </div>
                                <input asp-for="DepartureTime" class="form-control" type="datetime-local" required />
                            </div>
                            <span asp-validation-for="DepartureTime" class="text-danger"></span>
                        </div>

                        <!-- Arrival Time -->
                        <div class="form-group">
                            <label for="ArrivalTime">Arrival Time</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-clock"></i></span>
                                </div>
                                <input asp-for="ArrivalTime" class="form-control" type="datetime-local" required />
                            </div>
                            <span asp-validation-for="ArrivalTime" class="text-danger"></span>
                        </div>

                        <!-- Price -->
                        <div class="form-group">
                            <label for="Price">Rate (Price)</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">৳</span>
                                </div>
                                <input asp-for="Price" class="form-control" required />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <!-- Image Path -->
                        <div class="form-group">
                            <label for="ImagePath">Car Image URL</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-image"></i></span>
                                </div>
                                <input asp-for="ImagePath" class="form-control" />
                            </div>
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>
                        <a asp-area="Admin" asp-controller="AdminCar" asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>


