@model IEnumerable<Room>
@{
    ViewData["Title"] = "Room Management";
}

<div class="content-wrapper">
    <!-- Page Header -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Rooms</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Room List</h3>
                    <a asp-area="Admin" asp-controller="Room" asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus"></i> Create Room
                    </a>
                </div>
                <div class="card-body table-responsive p-0">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info m-3">No rooms found.</div>
                    }
                    else
                    {
                        <table class="table table-bordered table-hover text-sm">
                            <thead class="thead-light">
                                <tr>
                                    <th>Hotel Name</th>
                                    <th>Room Number</th>
                                    <th>Room Type</th>
                                    <th>Price Per Night</th>
                                    <th>Max Occupancy</th>
                                    <th>Is Available</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var room in Model)
                                {
                                    <tr>
                                        <td>@room.Hotel?.Name</td>
                                        <td>@room.RoomNumber</td>
                                        <td>@room.RoomType</td>
                                        <td>৳@room.PricePerNight.ToString("N2")</td>
                                        <td>@room.MaxOccupancy</td>
                                        <td>
                                            @if (room.IsAvailable)
                                            {
                                                <span class="badge badge-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">No</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Room" asp-action="Update" asp-route-id="@room.Id" class="btn btn-sm btn-warning mr-1">
                                                <i class="fas fa-edit"></i> Update
                                            </a>
                                            <a asp-area="Admin" asp-controller="Room" asp-action="Delete" asp-route-id="@room.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                <div class="card-footer text-muted">
                    Total Rooms: @Model.Count()
                </div>
            </div>
        </div>
    </section>
</div>
