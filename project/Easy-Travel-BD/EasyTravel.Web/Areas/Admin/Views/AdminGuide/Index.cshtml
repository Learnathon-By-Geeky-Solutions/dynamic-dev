@model IEnumerable<Guide>
@{
    ViewData["Title"] = "Guide Management";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Guides</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Guide List</h3>
                    <a asp-area="Admin" asp-controller="AdminGuide" asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus"></i> Create Guide
                    </a>
                </div>
                <div class="card-body table-responsive p-0">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info m-3">No guides found.</div>
                    }
                    else
                    {
                        <table class="table table-bordered table-hover text-sm">
                            <thead class="thead-light">
                                <tr>
                                    <th>First Name</th>
                                    <th>Email</th>
                                    <th>Contact Number</th>
                                    <th>Date of Birth</th>
                                    <th>Address</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var guide in Model)
                                {
                                    <tr>
                                        <td>@guide.FirstName</td>
                                        <td>@guide.Email</td>
                                        <td>@guide.ContactNumber</td>
                                        <td>@guide.DateOfBirth.ToString("dd MMM yyyy")</td>
                                        <td>@guide.Address</td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="AdminGuide" asp-action="Update" asp-route-id="@guide.Id" class="btn btn-sm btn-warning mr-1">
                                                <i class="fas fa-edit"></i> Update
                                            </a>
                                            <a asp-area="Admin" asp-controller="AdminGuide" asp-action="Delete" asp-route-id="@guide.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                <div class="card-footer text-muted">
                    Total Guides: @Model.Count()
                </div>
            </div>
        </div>
    </section>
</div>
