@model Agency
@{
    var action = ViewData["Title"];
    bool isDisabled = false;
    if ((string?)action == "Delete")
    {
        isDisabled = true;
    }
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"] Agency</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"] Agency</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"] Agency</h3>
                </div>
                <form method="post" asp-action="@action" asp-controller="AdminAgency">
                    <div class="card-body">
                        <!-- Name -->
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input asp-for="Name" class="form-control" required="@(isDisabled ? null : "required")" disabled="@(isDisabled ? "disabled" : null)" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Address -->
                        <div class="form-group">
                            <label for="Address">Address</label>
                            <input asp-for="Address" class="form-control" required="@(isDisabled ? null : "required")" disabled="@(isDisabled ? "disabled" : null)" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <!-- Contact Number -->
                        <div class="form-group">
                            <label for="ContactNumber">Contact Number</label>
                            <input asp-for="ContactNumber" class="form-control" required="@(isDisabled ? null : "required")" disabled="@(isDisabled ? "disabled" : null)" />
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>

                        <!-- License Number -->
                        <div class="form-group">
                            <label for="LicenseNumber">License Number</label>
                            <input asp-for="LicenseNumber" class="form-control" required="@(isDisabled ? null : "required")" disabled="@(isDisabled ? "disabled" : null)" />
                            <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                        </div>

                        <!-- Website -->
                        <div class="form-group">
                            <label for="Website">Website (Optional)</label>
                            <input asp-for="Website" class="form-control" disabled="@(isDisabled ? "disabled" : null)" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>

                        <!-- Add Date (Only for Update) -->
                        @if ((string?)action == "Update")
                        {
                            <div class="form-group">
                                <label for="AddDate">Add Date</label>
                                <input asp-for="AddDate" class="form-control" type="datetime-local" required="@(isDisabled ? null : "required")" />
                                <span asp-validation-for="AddDate" class="text-danger"></span>
                            </div>
                        }
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">@action Agency</button>
                        <a asp-area="Admin" asp-controller="AdminAgency" asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

