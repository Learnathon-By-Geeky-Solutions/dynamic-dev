@using EasyTravel.Domain.ValueObjects
@model PagedResult<Agency>

<table class="table table-bordered">
    <thead>
        <tr>
            <th onclick="sortTable('Name')">Name</th>
            <th onclick="sortTable('Address')">Address</th>
            <th onclick="sortTable('LicenseNumber')">License #</th>
            <th onclick="sortTable('AddDate')">Date Added</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var agency in Model.Items)
        {
            <tr>
                <td>@agency.Name</td>
                <td>@agency.Address</td>
                <td>@agency.LicenseNumber</td>
                <td>@agency.AddDate.ToShortDateString()</td>
                <td>
                    <button class="btn btn-sm btn-warning" onclick="openEditModal('@agency.Id')">Edit</button>
                    <button class="btn btn-sm btn-danger" onclick="openDeleteModal('@agency.Id')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

