@model EasyTravel.Domain.Entites.Room
@{
    var action = ViewData["Title"];
    bool isDisabled = false;
    if ((string?)action == "Delete")
    {
        isDisabled = true;
    }
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"] Room</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"] Room</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"] Room</h3>
                </div>
                <form asp-antiforgery="true" method="post" asp-action="@action" asp-controller="AdminRoom">
                    <div class="card-body">
                        <!-- Room Number -->
                        <div class="form-group">
                            <label for="RoomNumber">Room Number</label>
                            <input asp-for="RoomNumber" id="RoomNumber" class="form-control" required="@(isDisabled ? null : "required")" readonly="@(isDisabled ? "readonly" : null)" />
                            <span asp-validation-for="RoomNumber" class="text-danger"></span>
                        </div>

                        <!-- Room Type -->
                        <div class="form-group">
                            <label for="RoomType">Room Type</label>
                            <input asp-for="RoomType" id="RoomType" class="form-control" required="@(isDisabled ? null : "required")" readonly="@(isDisabled ? "readonly" : null)" />
                            <span asp-validation-for="RoomType" class="text-danger"></span>
                        </div>

                        <!-- Price Per Night -->
                        <div class="form-group">
                            <label for="PricePerNight">Price Per Night</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">৳</span>
                                </div>
                                <input asp-for="PricePerNight" id="PricePerNight" class="form-control" required="@(isDisabled ? null : "required")" readonly="@(isDisabled ? "readonly" : null)" />
                            </div>
                            <span asp-validation-for="PricePerNight" class="text-danger"></span>
                        </div>

                        <!-- Max Occupancy -->
                        <div class="form-group">
                            <label for="MaxOccupancy">Max Occupancy</label>
                            <input asp-for="MaxOccupancy" id="MaxOccupancy" class="form-control" required="@(isDisabled ? null : "required")" readonly="@(isDisabled ? "readonly" : null)" />
                            <span asp-validation-for="MaxOccupancy" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <textarea asp-for="Description" id="Description" class="form-control" rows="3" required="@(isDisabled ? null : "required")" readonly="@(isDisabled ? "readonly" : null)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Images -->
                        <div class="form-group">
                            <label for="Image1">Image 1</label>
                            <input asp-for="Image1" id="Image1" class="form-control" readonly="@(isDisabled ? "readonly" : null)" />
                            <span asp-validation-for="Image1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Image2">Image 2</label>
                            <input asp-for="Image2" id="Image2" class="form-control" readonly="@(isDisabled ? "readonly" : null)" />
                            <span asp-validation-for="Image2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Image3">Image 3</label>
                            <input asp-for="Image3" id="Image3" class="form-control" readonly="@(isDisabled ? "readonly" : null)" />
                            <span asp-validation-for="Image3" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Image4">Image 4</label>
                            <input asp-for="Image4" id="Image2" class="form-control" readonly="@(isDisabled ? "readonly" : null)" />
                            <span asp-validation-for="Image4" class="text-danger"></span>
                        </div>

                        <!-- Is Available -->
                        <div class="form-group">
                            <label for="IsAvailable">Is Available</label>
                            <select asp-for="IsAvailable" id="IsAvailable" class="form-control" disabled="@(isDisabled ? "disabled" : null)">
                                <option value="true">Available</option>
                                <option value="false">Not Available</option>
                            </select>
                            <span asp-validation-for="IsAvailable" class="text-danger"></span>
                        </div>

                        <!-- Hotel -->
                        <div class="form-group">
                            <label for="HotelId">Hotel</label>
                            <select asp-for="HotelId" id="HotelId" class="form-control" asp-items="ViewBag.Hotels" required="@(isDisabled ? null : "required")" readonly="@(isDisabled ? "readonly" : null)"></select>
                            <span asp-validation-for="HotelId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-theme">@action Room</button>
                        <a asp-area="Admin" asp-controller="AdminRoom" asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

