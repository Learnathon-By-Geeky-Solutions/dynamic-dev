@model EasyTravel.Domain.Entites.Bus

<div class="form-group">
    <label for="OperatorName">Bus Operator Name</label>
    <input asp-for="OperatorName" class="form-control" required />
    <span asp-validation-for="OperatorName" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="BusType">Bus Type</label>
    <input asp-for="BusType" class="form-control" />
    <span asp-validation-for="BusType" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="From">From (Starting Point)</label>
    <input asp-for="From" class="form-control" required />
    <span asp-validation-for="From" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="To">To (Destination)</label>
    <input asp-for="To" class="form-control" required />
    <span asp-validation-for="To" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="DepartureTime">Departure Time</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="far fa-clock"></i></span>
        </div>
        <input asp-for="DepartureTime" class="form-control" type="datetime-local" required />
    </div>
    <span asp-validation-for="DepartureTime" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="ArrivalTime">Arrival Time</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="far fa-clock"></i></span>
        </div>
        <input asp-for="ArrivalTime" class="form-control" type="datetime-local" required />
    </div>
    <span asp-validation-for="ArrivalTime" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="Price">Rate (Price)</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">৳</span>
        </div>
        <input asp-for="Price" class="form-control" required />
    </div>
    <span asp-validation-for="Price" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="TotalSeats">Total Seats</label>
    <input asp-for="TotalSeats" class="form-control" type="number" required />
    <span asp-validation-for="TotalSeats" class="text-danger"></span>
</div>

<div class="form-group">
    <label for="ImagePath">Bus Image URL</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-image"></i></span>
        </div>
        <input asp-for="ImagePath" class="form-control" />
    </div>
    <span asp-validation-for="ImagePath" class="text-danger"></span>
</div>
