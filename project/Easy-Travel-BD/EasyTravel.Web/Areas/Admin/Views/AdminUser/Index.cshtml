@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}

<div class="entity-list">
    <h2>User List</h2>
    <div class="create-btn">
        <a asp-area="Admin" asp-controller="AdminUser" asp-action="Create">Create User</a>
    </div>
    <div class="entity-row">
        <span class="name">FirstName</span>
        <span>Email</span>
        <span>Gender</span>
        <span>DateOfBirth</span>
        <span>CreatedAt.ToString()</span>

        <!-- Buttons Section -->
        <div class="actions">
           
        </div>
    </div>
    @foreach (var user in Model)
    {
        <div class="entity-row">
            <span class="name">@user.FirstName</span>
            <span>@user.Email</span>
            <span>@user.Gender</span>
            <span>@user.DateOfBirth</span>
            <span>@user.CreatedAt.ToString()</span>

            <!-- Buttons Section -->
            <div class="actions">
                <a asp-area="Admin" asp-controller="AdminUser" asp-action="Update" asp-route-id="@user.Id" class="update-btn">Update</a>
                <a asp-area="Admin" asp-controller="AdminUser" asp-action="Delete" asp-route-id="@user.Id" class="delete-btn">Delete</a>
            </div>
        </div>
    }
</div>
