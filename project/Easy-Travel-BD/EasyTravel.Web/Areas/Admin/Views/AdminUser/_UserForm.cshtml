@using EasyTravel.Web.Models
@model AdminUserViewModel

@{
    var action = ViewData["Title"];
    bool isDisabled = false;
    if ((string?)action == "Delete")
    {
        isDisabled = true;
    }
}
<div class="card shadow-sm" style="max-width: 600px; margin: 20px auto; padding: 20px; border-radius: 10px;">
    <h2 class="card-title text-center">@action User</h2>
    <form asp-antiforgery=true method="post" asp-action="@action">
        <!-- Name Input -->
        <div class="form-group mb-3">
            <label for="FirstName" style="width:100%">
                First Name
                <input asp-for="FirstName" id="FirstName" class="form-control" required="@(isDisabled ? null : "required")"
                disabled="@(isDisabled ? "disabled" : null)" />
            </label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="LastName" style="width:100%">
                Last Name
                <input asp-for="LastName" id="LastName" class="form-control" required="@(isDisabled ? null : "required")"
                disabled="@(isDisabled ? "disabled" : null)" />
            </label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <!-- Email Input -->
        <div class="form-group mb-3">
            <label for="Email" style="width:100%">
                Email
                <input asp-for="Email" type="email" id="Email" class="form-control" required="@(isDisabled ? null : "required")"
                disabled="@(isDisabled ? "disabled" : null)" />
            </label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- PhoneNumber Input -->
        <div class="form-group mb-3">
            <label for="PhoneNumber" style="width:100%">
                Phone Number
                <input asp-for="PhoneNumber" type="number" id="Email" class="form-control" required="@(isDisabled ? null : "required")"
                disabled="@(isDisabled ? "disabled" : null)" />
            </label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Date of birth Input -->
        <div class="form-group mb-3">
            <label for="DateOfBirth" style="width:100%">
                Date of Birth
                <input asp-for="DateOfBirth" type="datetime-local" id="DateOfBirth" class="form-control" required="@(isDisabled ? null : "required")"
                disabled="@(isDisabled ? "disabled" : null)" />
            </label>
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <!-- Gender Input-->
        <div class="form-group mb-3">
            <label for="Gender" style="width:100%">
                Gender<br />
                <input asp-for="Gender" type="radio" value="male" checked id="Gender" class="form-check-input" required="@(isDisabled ? null : "required")"
                disabled="@(isDisabled ? "disabled" : null)" />male
                <input asp-for="Gender" type="radio" value="female" id="Gender" class="form-check-input" required="@(isDisabled ? null : "required")"
                disabled="@(isDisabled ? "disabled" : null)" />female
                <input asp-for="Gender" type="radio" value="others" id="Gender" class="form-check-input" required="@(isDisabled ? null : "required")"
                disabled="@(isDisabled ? "disabled" : null)" />others
            </label>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        @if (action?.ToString() == "Update" || action?.ToString() == "Delete")
        {
            var pass = "password";
            <input asp-for="Password" value="@pass" hidden/>
            <input asp-for="ConfirmPassword" value="@pass" hidden />
        }
        <!-- Password Input -->
        @if (action?.ToString() == "Create")
        {
            <div class="form-group mb-3">
                <label for="Password" style="width:100%">
                    Password
                    <input asp-for="Password" type="password" id="Password" class="form-control" required="@(isDisabled ? null : "required")"
                           disabled="@(isDisabled ? "disabled" : null)" />
                </label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="ConfirmPassword" style="width:100%">
                    Confirm Password
                    <input asp-for="ConfirmPassword" type="password" id="Password" class="form-control" required="@(isDisabled ? null : "required")"
                           disabled="@(isDisabled ? "disabled" : null)" />
                </label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        }

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary btn-block">@action</button>
        <a asp-area="Admin" asp-controller="AdminUser" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}