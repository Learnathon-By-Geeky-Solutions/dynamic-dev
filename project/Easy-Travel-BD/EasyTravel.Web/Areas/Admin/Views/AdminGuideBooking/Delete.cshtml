@model GuideBooking
@{
    ViewData["Title"] = "Delete";

}
<div class="card shadow-sm" style="max-width: 600px; margin: 20px auto; padding: 20px; border-radius: 10px;">
    <h2 class="card-title text-center">Delete Guide Booking</h2>
    <form asp-antiforgery=true method="post" action="Delete">
        <input asp-for="Id" />
        <div class="form-group">
            <label for="UserName" style="width:100%">
                User Name:
                <input asp-for="UserName" class="form-input" disabled />
            </label>
        </div>
        <div class="form-group">
            <label for="Email" style="width:100%">
                Email:
                <input asp-for="Email" class="form-input" disabled />
            </label>
        </div>
        <div class="form-group">
            <label for="PhoneNumber" style="width:100%">
                Phone Number:
                <input asp-for="PhoneNumber" class="form-input" disabled />
            </label>
        </div>
        <div class="form-group">
            <label for="Gender" style="width:100%">
                Gender:
                <input asp-for="Gender" class="form-input" disabled />
            </label>
        </div>
        <div class="form-group">
            <label for="EventType" style="width:100%">
                Event Type:
                <input asp-for="EventType" class="form-input" disabled />
            </label>
        </div>
        <div class="form-group">
            <label for="EventLocation" style="width:100%">
                Event Location:
                <input asp-for="EventLocation" class="form-input" disabled />
            </label>
        </div>
        <div class="form-group">
            <label for="EventDate" style="width:100%">
                Event Date:
                <input asp-for="EventDate" type="date" class="form-input" disabled />
            </label>
        </div>
        <div class="form-group">
            <label for="StartTime" style="width:100%">
                Start Time:
                <input asp-for="StartTime" type="time" class="form-input" disabled />
            </label>
        </div>
        <div class="form-group">
            <label for="EndTime" style="width:100%">
                End Time:
                <input asp-for="EndTime" type="time" class="form-input" disabled />
            </label>
        </div>
        <div class="form-group">
            <label for="TimeInHour" style="width:100%">
                Time In Hour:
                <input asp-for="TimeInHour" class="form-input" disabled />
            </label>
        </div>
        <div class="form-group">
            <label for="TotalAmount" style="width:100%">
                Total Amount:
                <input asp-for="TotalAmount" class="form-input" disabled />
            </label>
        </div>
        <div class="form-group">
            <label for="CreatedAt" style="width:100%">
                Created At:
                <input asp-for="CreatedAt" type="datetime-local" class="form-input" disabled />
            </label>
        </div>
        @* <div class="form-group"> *@
        @*     <label for="UserId" style="width:100%"> *@
        @*         User ID: *@
        @*         <input asp-for="UserId" class="form-input" disabled /> *@
        @*     </label> *@
        @* </div> *@
        <div class="form-group">
            <button type="submit" class="btn btn-primary me-2">Delete</button>
            <a asp-area="Admin" asp-controller="AdminGuideBooking" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>