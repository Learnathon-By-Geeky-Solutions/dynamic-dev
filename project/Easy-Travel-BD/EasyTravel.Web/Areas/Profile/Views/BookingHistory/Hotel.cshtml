@using EasyTravel.Domain.Entites
@model IEnumerable<HotelBooking>
@{
    ViewData["Title"] = "Guide";
    TempData["Header"] = "Booking History";
}

<div class="entity-list">
    @if (Model.Count() == 0)
    {
        <h1>No history</h1>
    }
    else
    {
        <div class="entity-row">
            <span class="name"></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>

            <!-- Buttons Section -->
            <div class="actions">
            </div>
        </div>
        @foreach (var hotel in Model)
        {
            <div class="entity-row">
                <span class="name"></span>
                <span></span>
                <span></span>
                <span></span>
                <span></span>

                <!-- Buttons Section -->
                <div class="actions">
                    <a asp-area="Profile" asp-controller="" asp-action="" asp-route-id="" class="update-btn">Pay</a>
                    <a asp-area="Profile" asp-controller="" asp-action="" asp-route-id="" class="delete-btn">Cancle</a>
                </div>
            </div>
        }
    }
</div>