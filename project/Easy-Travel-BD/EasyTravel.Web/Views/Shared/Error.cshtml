@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">

    <div class="row d-flex flex-column justify-content-center align-items-center text-center">
        <a>
            <img src="https://img.freepik.com/free-vector/404-error-with-landscape-concept-illustration_114360-7898.jpg" alt="404 Not Found" class="img-fluid" />
        </a>
        <h2 class="text-danger mt-3">An error occurred while processing your request.</h2>
        <h3 class="text-danger">Please contact the system administrator.</h3>
    </div>

</div>
