</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Easy_Travel_BD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link text-dark" asp-controller="Bus" asp-action="List">Bus</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link text-dark" asp-controller="Hotel" asp-action="Index">Hotel</a>
                        </li> 
                        @{
                            var roles = new List<string>
                            {
                                "admin",
                                "busManager",
                                "agencyManager",
                                "carManager",
                                "hotelManager",
                            };
                            foreach (var role in roles)
                            {
                                if (User.Identity.IsAuthenticated == true && User.IsInRole(role))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a>
                                    </li>
                                }
                            }
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="List">Car</a>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Hire
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark justify-content-center">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Photographer" asp-action="Index">Photographer</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Guide" asp-action="Index">Guide</a></li>
                            </ul>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    
    </header>
    <header id="header" class="header fixed-top">



        <div class="branding d-flex align-items-cente">

            <div class="container position-relative d-flex align-items-center justify-content-between">
                <a href="index.html" class="logo d-flex align-items-center">
                    <!-- Uncomment the line below if you also wish to use an image logo -->
                    <!-- <img src="assets/img/logo.png" alt=""> -->
                    <h1 class="sitename">Easy Travel BD</h1>
                    <span>.</span>
                </a>

                <nav id="navmenu" class="navmenu">
                    <ul>
                        <li><a href="#hero" class="active">Home</a></li>
                        <li><a href="#services">Our Services</a></li>
                        <li><a href="#bookbus">Book Bus Ticket</a></li>
                        <li><a href="#hotel">Hotel Booking</a></li>
                        <li><a href="#tourguide">Tour Guides</a></li>
                        <li class="dropdown">
                            <a href="#"><span>More Options</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                            <ul>
                                <li><a href="#privatecar">Rent a Private Car</a></li>
                                <li><a href="#travelagency">Find Travel Agencies</a></li>
                                <li><a href="#photographers">Hire a Photographer</a></li>
                                <li><a href="#faq">FAQs</a></li>
                                <li><a href="#support">Support</a></li>
                                <li><a href="#bookflight">Book Flight</a></li>
                                <li><a href="blog.html">Travel Blog</a></li>

                                <li><a href="#about">About Us</a></li>

                            </ul>
                        </li>
                        <li><a href="#contact">Contact Us</a></li>
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>


            </div>

        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class=" footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Vendor JS File -->
    <script src="assets/vendor/aos/aos.js"></script>
    <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <!--Swiper JS -->
    <script>
        function initSwiper() {
            document.querySelectorAll(".init-swiper").forEach(function (swiperElement) {
                let config = JSON.parse(
                    swiperElement.querySelector(".swiper-config").innerHTML.trim()
                );

                if (swiperElement.classList.contains("swiper-tab")) {
                    initSwiperWithCustomPagination(swiperElement, config);
                } else {
                    new Swiper(swiperElement, config);
                }
            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
  
</body>
</html>
