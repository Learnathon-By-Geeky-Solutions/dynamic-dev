<div class="form-group">
    <label for="Name" style="width:100%">
        Hotel Name
        <input asp-for="Name" class="form-control" required />
    </label>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="Address" style="width:100%">
        Write Address
        <input asp-for="Address" class="form-control" />
    </label>
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="Description" style="width:100%">
        Description
        <input asp-for="Description" class="form-control" required />
    </label>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="City" style="width:100%">
        City
        <input asp-for="City" class="form-control" required />
    </label>
    <span asp-validation-for="City" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="Phone" style="width:100%">
        Phone
        <input asp-for="Phone" class="form-control" required />
    </label>
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="Email" style="width:100%">
        Email
        <input asp-for="Email" class="form-control" required type="email" />
    </label>
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="Rating" style="width:100%">
        Rating
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
    </label>
    <span asp-validation-for="Rating" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="Image" style="width:100%">
        Image URL
        <input asp-for="Image" class="form-control" />
    </label>
    <span asp-validation-for="Image" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="CreatedAt" style="width:100%">
        Created At
        <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
    </label>
    <span asp-validation-for="CreatedAt" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="UpdatedAt" style="width:100%">
        Updated At
        <input asp-for="UpdatedAt" class="form-control" type="datetime-local" />
    </label>
    <span asp-validation-for="UpdatedAt" class="text-danger"></span>
</div>
