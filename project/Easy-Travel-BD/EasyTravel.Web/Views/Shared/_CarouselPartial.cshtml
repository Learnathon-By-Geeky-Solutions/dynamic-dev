@model IEnumerable<dynamic>

<div class="container py-5" data-aos="fade-up" data-aos-delay="100">
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            @foreach (var item in Model)
            {
                <div class="swiper-slide">
                    <div class="card border-0 shadow-lg rounded-4 overflow-hidden position-relative h-100">
                        <img src="@item.ImageUrl" alt="@item.Title" class="card-img-top object-fit-cover" style="height: 250px; width: 100%;">
                        <div class="card-body bg-white">
                            <h5 class="card-title fw-bold mb-1">@item.Title</h5>
                            <p class="text-muted mb-2">@item.Location</p>
                            <div class="mb-3">
                                @for (int i = 0; i < item.Rating; i++)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                            </div>
                            <p class="card-text fst-italic text-secondary small">
                                <i class="bi bi-quote quote-icon-left"></i>
                                @item.Description
                                <i class="bi bi-quote quote-icon-right"></i>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Navigation + Pagination -->
        <div class="swiper-pagination mt-3"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</div>
@section Scripts {
    <script>
        var swiper = new Swiper(".mySwiper", {
            loop: true,
            grabCursor: true,
            spaceBetween: 30,
            centeredSlides: true,
            autoplay: {
                delay: 3500,
                disableOnInteraction: false,
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            breakpoints: {
                768: {
                    slidesPerView: 1,
                },
                992: {
                    slidesPerView: 2,
                },
                1200: {
                    slidesPerView: 3,
                }
            }
        });
    </script>
}
