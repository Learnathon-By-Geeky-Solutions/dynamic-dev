@using EasyTravel.Domain.Entites
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> signInManager

<ul class="navbar-nav ms-auto d-flex align-items-center gap-2">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white d-flex align-items-center gap-2" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle fa-lg"></i>
                <span class="fw-semibold">
                    @User.Identity?.Name.Remove(User.Identity.Name.IndexOf('@'))
                </span>

            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow animated--fade-in" aria-labelledby="userDropdown">
                <li>
                    <h6 class="dropdown-header text-muted">Welcome 👋</h6>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="Profile" asp-controller="BookingHistory" asp-action="Index">
                        <i class="fas fa-calendar-check me-2 text-success"></i> Booking History
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="Profile" asp-controller="MyAccount" asp-action="Index">
                        <i class="fas fa-user-cog me-2 text-primary"></i> My Account
                    </a>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <a class="dropdown-item text-danger" asp-area="" asp-controller="Account" asp-action="Logout">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
                <a class="nav-link fw-bold text-light btn btn-outline-secondary px-3 py-1" asp-area="" asp-controller="Account" asp-action="Login">
                    <i class="fas fa-sign-in-alt me-1"></i> Login
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link fw-bold text-light btn btn-theme px-3 py-1" asp-area="" asp-controller="Account" asp-action="Register">
                    <i class="fas fa-user-plus me-1"></i> Register
                </a>
            </li>
    }
</ul>
