@using EasyTravel.Domain.Entites
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> signInManager

<ul class="nav d-flex align-items-center ">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="dropdown">
            <a class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                @User.Identity?.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-dark justify-content-center">
                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="">
            <a class="nav-link fw-bold text-light" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="">
            <a class="nav-link fw-bold text-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    }
</ul>
