@model SearchResultViewModel
@{
    ViewData["Title"] = "Guide List";
}

<section id="guide-search-section" class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Available Tour Guides</h2>
            <p class="text-muted">Find the best tour guides based on experience, rating, and availability.</p>
        </div>
    </div>
</section>

<section id="guide-result-section" class="container my-4">
    @foreach (var guide in Model.Guides)
    {
        var totalPrice = guide.HourlyRate * Model.SearchFormModel?.TimeInHour;

        <div class="row mb-4 align-items-center bg-white p-3 rounded shadow-sm border result-card">

            <!-- Guide Image -->
            <div class="col-md-3 d-flex justify-content-center">
                <img src="@guide.ProfilePicture" alt="@guide.FirstName" class="img-fluid rounded-circle" style="height: 150px; width: 150px; object-fit: cover;" />

<div class="row shadow-sm rounded-2 ps-5 mt-5">
    <div class="mx-auto col-lg-8">
        <div class="d-flex justify-content-between mb-lg-5">
            <a href="#"><i class="bi bi-caret-left-fill fs-1 text-danger"></i></a>
            <h2 class="text-center">Guide List</h2>
            <a href="#"><i class="bi bi-caret-right-fill fs-1 text-danger"></i></a>
        </div>
        @foreach (var guide in Model.Guides)
        {
            <div class="guide-card p-3 d-flex my-4 align-items-center">
                <div class="w-3">
                    <img src="@guide.ProfilePicture" alt="Profile picture of Guide John Doe" class="profile-picture me-3">

                </div>
                <div class="d-flex gap-5 justify-content-between">
                    <div class="my-lg-1 my-sm-0">
                        <div>
                            <h6 class="my-1 text-muted">Personal Info</h6>
                            <p class="fs-5 fw-bolder">@guide.FirstName @guide.LastName</p>
                            <h6>@guide.Email</h6>
                        </div>
                    </div>
                    <div class="my-1">
                        <h6 class="my-1 text-muted">Rating</h6>
                        <p class="mb-lg-3 fs-5 fs-sm-1">⭐ @guide.Rating</p>
                        <h6 class="my-1 text-muted">Experience</h6>
                        <p class="mb-lg-2 fs-5 fs-sm-1">@guide.YearsOfExperience</p>
                    </div>
                    <div class="my-1">
                        <h6 class="my-1 mb-lg-2 text-muted">Total Price</h6>
                        @{
                            var amount = guide.HourlyRate * Model.SearchFormModel?.TimeInHour;
                        }
                        <p class="mb-lg-2 my-sm-0"> BDT: @amount </p>
                    </div>
                    <div class="my-1">
                        <a asp-area="" asp-controller="Guide" asp-action="Book" asp-route-id="@guide.Id" class="btn btn-primary">
                            Book
                            Now
                        </a>
                    </div>
                </div>

            </div>

            <!-- Guide Info -->
            <div class="col-md-6">
                <h4 class="fw-bold mb-1">@guide.FirstName @guide.LastName</h4>
                <p class="text-muted mb-2">
                    <i class="bi bi-envelope"></i> @guide.Email
                </p>
                <p class="text-muted mb-0">Reliable guide to help you explore and enjoy your destinations safely and memorably.</p>
            </div>

            <!-- Stats and Action -->
            <div class="col-md-3 text-md-end text-center mt-3 mt-md-0">
                <p class="mb-1">
                    <strong>⭐ Rating:</strong> @guide.Rating
                </p>
                <p class="mb-1">
                    <strong>Experience:</strong> @guide.YearsOfExperience years
                </p>
                <p class="text-primary fw-bold fs-5">৳@totalPrice</p>
                <a asp-controller="Guide" asp-action="Book" asp-route-id="@guide.Id" class="btn btn-success btn-sm fw-bold text-white w-100">Book Now</a>
            </div>
        </div>
    }
</section>
