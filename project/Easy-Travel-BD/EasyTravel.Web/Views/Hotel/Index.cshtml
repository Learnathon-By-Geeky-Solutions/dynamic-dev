@model IEnumerable<EasyTravel.Domain.Entites.Hotel>
<div class="container">
    <section id="search-section" class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-4">
                <h2 class="fw-bold">Find Your Journey</h2>
                <p class="text-muted">Search by location and time to plan your next trip easily.</p>
            </div>
            <form class="row g-3 justify-content-center">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Enter Destination or Location" name="location" required>
                </div>
                <div class="col-md-4">
                    <input type="datetime-local" class="form-control" name="travelDateTime" required>
                </div>
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary">Search   <i class="bi bi-search"></i></button>                             
                </div>
            </form>
        </div>
    </section>


 <div class="container mx-auto mt-4">
    <div class="row">
       @{
     foreach(var hotel in Model)
     {
         <div class="col-md-4">
             <div class="card" style="width: 18rem;">
                 <img src="@hotel.Image" class="card-img-top" alt="...">
                 <div class="card-body">
                     <h5 class="card-title">
                     @hotel.Name
                     </h5>
                     <h6 class="card-subtitle mb-2 text-muted">
                         @hotel.Address
                         </h6>
                      <div> 
                      <span>Ratings:  @await Html.PartialAsync("_Rating", hotel.Rating)</span>
                    
                      </div>
                         <p class="card-text">
                             @hotel.Description
                             </p>
                <a asp-controller="Hotel" asp-action="Details" asp-route-id="@hotel.Id" class="btn btn-success btn-sm fw-bold text-dark">Details</a>
                <a asp-controller="Hotel" asp-action="Book" asp-route-HotelId="@hotel.Id" class="btn btn-warning btn-sm fw-bold text-dark">Book</a>
                  </div>
              </div>
          </div>
 }
 }

    </div>
</div>
</div>
