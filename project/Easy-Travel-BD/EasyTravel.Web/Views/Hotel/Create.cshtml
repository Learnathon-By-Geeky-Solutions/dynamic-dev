@model EasyTravel.Domain.Entites.Hotel

@{
    ViewData["Title"] = "Add Hotel";
}

<div class="card shadow-sm" style="max-width: 600px; margin: 20px auto; padding: 20px; border-radius: 10px;">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <form method="post" asp-action="Create" asp-controller="Hotel">
        <partial name="_PartialHotelForm" />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Hotel</button>
        </div>
    </form>
</div>