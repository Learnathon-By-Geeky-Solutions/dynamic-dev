<div class="container mt-3">
    <h2 class="text-center mb-4">Bus Search</h2>
    <!--SearchBox -->
    <form method="post" asp-action="Bus">
        <div class="row">
            <!-- From Field -->
            <div class="col-md-4 form-group">
                <label for="From" class="form-label">From</label>
                <input asp-for="From" class="form-control" placeholder="Enter starting point" required />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>

            <!-- To Field -->
            <div class="col-md-4 form-group">
                <label for="To" class="form-label">To</label>
                <input asp-for="To" class="form-control" placeholder="Enter destination" required />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>

            <!-- Date Field -->
            <div class="col-md-4 form-group">
                <label for="DateTime" class="form-label">Date</label>
                <input asp-for="DepartureTime" class="form-control" type="date" required value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-theme btn-lg">Search</button>
        </div>
    </form>
    <!--Carosol -->

    
  
