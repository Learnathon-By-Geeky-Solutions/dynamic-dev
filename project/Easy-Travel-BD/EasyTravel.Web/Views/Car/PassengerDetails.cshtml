@model EasyTravel.Web.ViewModels.CarBookingViewModel

@{
    ViewData["Title"] = "Car Booking";

}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form method="post" id="bookingForm">
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-car text-success me-2"></i>
                            <div>
                                <h5 class="mb-0">Car Details</h5>
                                <small class="text-muted">@Model.Car?.OperatorName - @Model.Car?.CarType</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <small class="text-muted">From</small>
                                <h6>@Model.Car?.From</h6>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">To</small>
                                <h6>@Model.Car?.To</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">Departure</small>
                                <h6>@Model.Car?.DepartureTime.ToString("dd MMM yyyy hh:mm tt")</h6>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">Arrival</small>
                                <h6>@Model.Car?.ArrivalTime.ToString("dd MMM yyyy hh:mm tt")</h6>
                            </div>
                        </div>
                    </div>
                </div>

                ```
