@model EasyTravel.Web.Models.BusSearchFormModel
@{
    var recommendedHotels = new List<dynamic>
    {
        new { ImageUrl = "https://example.com/hotel1.jpg", Title = "Hotel Sonargaon", Location = "Dhaka, Kawran Bazar", Rating = 5, Description = "Luxurious stay with premium facilities." },
        new { ImageUrl = "https://example.com/hotel2.jpg", Title = "Hotel Radisson", Location = "Dhaka, Airport Road", Rating = 4, Description = "Comfortable and convenient." }
    };

    var bestBusServices = new List<dynamic>
    {
        new { ImageUrl = "https://example.com/bus1.jpg", Title = "Hanif Bus Service", Location = "Dhaka, Kawran Bazar", Rating = 5, Description = "Reliable and comfortable travel." },
        new { ImageUrl = "https://example.com/bus2.jpg", Title = "Green Line", Location = "Dhaka, Gabtoli", Rating = 4, Description = "Affordable and safe." }
    };
}
<div class="container">
    <h2 class="text-center mb-4">Bus Search</h2>
    <!--SearchBox -->
    <form method="post" asp-action="Index">
        <div class="row">
            <!-- From Field -->
            <div class="col-md-4 form-group">
                <label for="From" class="form-label">From</label>
                <input asp-for="From" class="form-control" placeholder="Enter starting point" required />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>

            <!-- To Field -->
            <div class="col-md-4 form-group">
                <label for="To" class="form-label">To</label>
                <input asp-for="To" class="form-control" placeholder="Enter destination" required />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>

            <!-- Date Field -->
            <div class="col-md-4 form-group">
                <label for="DateTime" class="form-label">Date</label>
                <input asp-for="DepartureTime" class="form-control" type="date" required />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Search</button>
        </div>
    </form>
    <!--Carosol -->

    <h2>Recommended Hotels</h2>
    @await Html.PartialAsync("_CarouselPartial", recommendedHotels)
   
    <h2>Best Bus Services</h2>
    @await Html.PartialAsync("_CarouselPartial", bestBusServices)

</div>
