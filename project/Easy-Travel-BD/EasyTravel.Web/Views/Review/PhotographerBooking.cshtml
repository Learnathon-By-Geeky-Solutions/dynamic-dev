@model BookingModel
@{

}
<div class="d-flex justify-content-center gap-lg-3">
    <div>
        <div>
            <h3 class="text-danger">Photographer details</h3>
            <hr>
            <div class="d-flex justify-content-between">
                <div class="d-flex justify-content-start gap-lg-2">
                    <div>
                        <img src="" alt="Cameraman">
                    </div>
                    <div>
                        <p>@Model.PhotographerBooking?.Photographer?.FirstName @Model.PhotographerBooking?.Photographer?.LastName</p>
                        <p>@Model.PhotographerBooking?.Photographer?.Rating</p>
                    </div>
                </div>
                <div>
                    <p>@Model.PhotographerBooking?.EventType</p>
                </div>
                <hr>
            </div>
            <div class="d-flex justify-content-between">
                <p>Starts from : @Model.PhotographerBooking?.StartTime</p>
                <p>Ends at : @Model.PhotographerBooking?.EndTime</p>
            </div>
        </div>
        <div class="">
            <h3 class="text-danger">User Details</h3>
            <div class="row shadow-lg rounded-3 my-4 p-3">
                <h3 class="m-1 py-1 bg-danger text-white rounded-2">User</h3>
                <div class="d-flex justify-content-between px-3 my-3 text-secondary">
                    <div class="d-flex">

                        <div>
                            <h5 class="mb-1">@Model.PhotographerBooking.Photographer?.FirstName @Model.PhotographerBooking.Photographer?.LastName</h5>
                            <p class="mb-1">‚≠ê @Model.PhotographerBooking.Photographer?.Rating</p>
                        </div>

                        <div class="mx-4">
                            <p>@Model.PhotographerBooking?.UserName</p>
                            <p>@Model.PhotographerBooking?.Email</p>

                        </div>
                    </div>
                    <div class="d-flex justify-content-between" data-aos="fade-left" data-aos-delay="200">
                        <p class="text-muted mb-0"><strong>Starts:</strong> @Model.PhotographerBooking?.StartTime</p>
                        <p class="text-muted mb-0"><strong>Ends:</strong> @Model.PhotographerBooking?.EndTime</p>
                    </div>
                </div>
            </div>

            <!-- User Details -->
            <div class="card shadow-sm mb-4" data-aos="fade-up" data-aos-delay="300">
                <div class="card-header bg-theme">
                    <h4 class="mb-0">User Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6" data-aos="fade-right" data-aos-delay="400">
                            <p><strong>Name:</strong> @Model.PhotographerBooking.UserName</p>
                            <p><strong>Email:</strong> @Model.PhotographerBooking.Email</p>
                        </div>

                        <div class="mx-4">
                            <p>@Model.PhotographerBooking?.Gender</p>
                            <p>@Model.PhotographerBooking?.PhoneNumber</p>

                        </div>
                    </div>
                </div>
            </div>

            <div class="">
                <form asp-antiforgery="true" method="post" id="bookingForm">
                    <input asp-for="Id" hidden />
                    <input asp-for="@Model.PhotographerBooking!.UserName" hidden />
                    <input asp-for="@Model.PhotographerBooking!.Email" hidden />
                    <input asp-for="@Model.PhotographerBooking!.PhoneNumber" hidden />
                    <input asp-for="@Model.PhotographerBooking!.Gender" hidden />
                    <input asp-for="@Model.PhotographerBooking!.EventDate" hidden />
                    <input asp-for="@Model.PhotographerBooking!.EventType" hidden />
                    <input asp-for="@Model.PhotographerBooking!.EventLocation" hidden />
                    <input asp-for="@Model.PhotographerBooking!.StartTime" hidden />
                    <input asp-for="@Model.PhotographerBooking!.EndTime" hidden />
                    <input asp-for="@Model.PhotographerBooking!.TimeInHour" hidden />
                    <input asp-for="@Model.PhotographerBooking!.PhotographerId" hidden />
                    <input asp-for="@Model.Booking!.TotalAmount" hidden />
                    <div class="d-inline-flex gap-2">
                        <button type="button" class="btn btn-danger" onclick="submitForm('/Booking/Photographer')">Book</button>
                        <button type="button" class="btn btn-danger" onclick="submitForm('/Payment/Pay')">Pay</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div></div>
</div>
<script>
    function submitForm(actionUrl) {
        const form = document.getElementById("bookingForm");
        form.action = actionUrl; // Set the form action dynamically
        form.method = "post"; // Ensure the method is POST
        form.submit(); // Submit the form programmatically
    }
</script>
