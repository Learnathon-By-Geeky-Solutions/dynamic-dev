@model EasyTravel.Web.ViewModels.BusBookingViewModel

@{
    ViewData["Title"] = "Bus Ticket Booking";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Booking" asp-action="Bus" method="post" id="bookingForm">
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-bus text-success me-2"></i>
                            <div>
                                <h5 class="mb-0">Bus Details</h5>
                                <small class="text-muted">@Model.Bus?.OperatorName - @Model.Bus?.BusType</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <small class="text-muted">From</small>
                                <h6>@Model.Bus?.From</h6>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">To</small>
                                <h6>@Model.Bus?.To</h6>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">Departure</small>
                                <h6>@Model.Bus?.DepartureTime.ToString("dd MMM yyyy hh:mm tt")</h6>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">Arrival</small>
                                <h6>@Model.Bus?.ArrivalTime.ToString("dd MMM yyyy hh:mm tt")</h6>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-chair text-primary me-2"></i>
                            <h5 class="mb-0">Select Seats</h5>
                        </div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Selected Seats</small>
                        <div id="selectedSeatsDisplay" class="selected-seats-tags">
                            @foreach (var seat in Model.SelectedSeatNumbers!)
                            {
                                <span class="seat-tag">@seat</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user text-warning me-2"></i>
                            <h5 class="mb-0">Passenger Details</h5>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="BookingForm.PassengerName">
                                    Passenger Name
                                    <input asp-for="BookingForm.PassengerName" class="form-control" readonly />
                                </label>
                                <span asp-validation-for="BookingForm.PassengerName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="BookingForm.Email">
                                    Email
                                    <input asp-for="BookingForm.Email" class="form-control" readonly />
                                </label>

                                <span asp-validation-for="BookingForm.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="BookingForm.PhoneNumber">
                                    Phone Number

                                    <input asp-for="BookingForm.PhoneNumber" class="form-control" readonly />
                                </label>

                                <span asp-validation-for="BookingForm.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>


               
                @foreach (var seat in Model.SelectedSeatNumbers)
                {
                    <input type="hidden" name="SelectedSeatNumbers" value="@seat" readonly />
                }

                @foreach (var seatId in Model.SelectedSeatIds!)
                {
                    <input type="hidden" name="SelectedSeatIds" value="@seatId" readonly />
                }

                <input type="hidden" name="BusId" value="@Model.BusId" readonly />
                <input type="hidden" name="BookingForm.TotalAmount" value="@Model.TotalAmount" readonly />
                <input type="hidden" name="TotalAmount" value="@Model.TotalAmount" readonly/>
            </form>
            <form asp-controller="Payment" asp-action="Pay" method="post">
                <button type="submit" name="Id" value="@Model.BusId" class="btn btn-danger">Pay</button>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Booking Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Selected Seats</small>
                        <div id="selectedSeatsDisplay" class="selected-seats-tags">
                            @foreach (var seat in Model.SelectedSeatNumbers!)
                            {
                                <span class="seat-tag">@seat</span>
                            }
                        </div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Price per Seat</small>
                        <h6>৳@Model.Bus?.Price</h6>
                    </div>
                    <div class="total-section">
                        <small class="text-muted">Total Amount</small>
                        <h4 class="text-success">৳<span id="totalAmountDisplay">@Model.TotalAmount</span></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}