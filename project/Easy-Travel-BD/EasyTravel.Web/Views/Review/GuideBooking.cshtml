@model BookingModel
@{
}
<section class="container my-5" data-aos="fade-up" data-aos-delay="100">
    <div class="d-flex flex-column gap-4">

        <!-- Guide Details -->
        <div class="card shadow border-0">
            <div class="card-body">
                <h3 class="text-danger mb-3">Guide Details</h3>
                <hr />
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div class="d-flex align-items-center gap-3">
                        <img src="@Model.GuideBooking?.Guide?.ProfilePicture" alt="Guide" class="rounded-circle border" style="width: 80px; height: 80px; object-fit: cover;">
                        <div>
                            <h5 class="mb-1">@Model.GuideBooking?.Guide?.FirstName @Model.GuideBooking?.Guide?.LastName</h5>
                            <p class="mb-0 text-muted">⭐ @Model.GuideBooking?.Guide?.Rating</p>
                        </div>
                    </div>
                    <div>

                        <span class="badge bg-theme px-3 py-2 fs-6">@Model.GuideBooking?.EventType</span>
                    </div>
                </div>
                <div class="mt-4 d-flex justify-content-between text-secondary">
                    <p><strong>Starts from:</strong> @Model.GuideBooking?.StartTime</p>
                    <p><strong>Ends at:</strong> @Model.GuideBooking?.EndTime</p>
                </div>

            </div>
        </div>

        <!-- User Details -->
        <div class="card shadow-lg border-0" data-aos="fade-up" data-aos-delay="200">
            <div class="card-body">
                <h3 class="text-danger mb-3">User Details</h3>
                <div class="row row-cols-1 row-cols-md-2 text-secondary">
                    <div class="d-flex">
                        <div>
                            <p class="mb-1 fw-semibold">Name:</p>
                            <p class="mb-1 fw-semibold">Email:</p>
                        </div>

                        <div class="ms-3">
                            <p class="mb-1">@Model.GuideBooking?.UserName</p>
                            <p class="mb-1">@Model.GuideBooking?.Email</p>

                        </div>
                    </div>
                    <div class="d-flex">
                        <div>
                            <p class="mb-1 fw-semibold">Gender:</p>
                            <p class="mb-1 fw-semibold">Phone Number:</p>
                        </div>

                        <div class="ms-3">
                            <p class="mb-1">@Model.GuideBooking.Gender</p>
                            <p class="mb-1">@Model.GuideBooking.PhoneNumber</p>

                        </div>
                    </div>
                </div>
            </div>
           <div class="d-inline-flex">
                <form asp-antiforgery=true method="post" id="bookingForm">
                    <input asp-for="Id" hidden />
                    <input asp-for="@Model.GuideBooking!.UserName" hidden />
                    <input asp-for="@Model.GuideBooking!.Email" hidden />
                    <input asp-for="@Model.GuideBooking!.PhoneNumber" hidden />
                    <input asp-for="@Model.GuideBooking!.Gender" hidden />
                    <input asp-for="@Model.GuideBooking!.EventDate" hidden />
                    <input asp-for="@Model.GuideBooking!.EventType" hidden />
                    <input asp-for="@Model.GuideBooking!.EventLocation" hidden />
                    <input asp-for="@Model.GuideBooking!.StartTime" hidden />
                    <input asp-for="@Model.GuideBooking!.EndTime" hidden />
                    <input asp-for="@Model.GuideBooking!.TimeInHour" hidden />
                    <input asp-for="@Model.GuideBooking!.GuideId" hidden />
                    <input asp-for="@Model.Booking!.TotalAmount" hidden />
                    <div class="d-inline-flex gap-2">
                        <button type="button" class="btn btn-danger" onclick="submitForm('/Booking/Guide')">Book</button>
                        <button type="button" class="btn btn-danger" onclick="submitForm('/Payment/Pay')">Pay</button>
                    </div>
                </form>
           </div>
        </div>
    </div>
    <div></div>
</div>

<script>
    function submitForm(actionUrl) {
        const form = document.getElementById("bookingForm");
        form.action = actionUrl; // Set the form action dynamically
        form.method = "post"; // Ensure the method is POST
        form.submit(); // Submit the form programmatically
    }
</script>

