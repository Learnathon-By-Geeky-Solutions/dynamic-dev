@model BookingModel
@{

}
<div class="d-flex justify-content-center gap-lg-3">
    <div>
        <div>
            <h3 class="text-danger">Guide details</h3>
            <hr>
            <div class="d-flex justify-content-between">
                <div class="d-flex justify-content-start gap-lg-2">
                    <div>
                        <img src="" alt="Guide">
                    </div>
                    <div>
                        <p>@Model.GuideBooking?.Guide?.FirstName @Model.GuideBooking?.Guide?.LastName</p>
                        <p>@Model.GuideBooking?.Guide?.Rating</p>
                    </div>
                </div>
                <div>
                    <p>@Model.GuideBooking?.EventType</p>
                </div>
                <hr>
            </div>
            <div class="d-flex justify-content-between">
                <p>Starts from : @Model.GuideBooking?.StartTime</p>
                <p>Ends at : @Model.GuideBooking?.EndTime</p>
            </div>
        </div>
        <div class="">
            <h3 class="text-danger">User Details</h3>
            <div class="row shadow-lg rounded-3 my-4 p-3">
                <h3 class="m-1 py-1 bg-danger text-white rounded-2">User</h3>
                <div class="d-flex justify-content-between px-3 my-3 text-secondary">
                    <div class="d-flex">
                        <div>
                            <p>Name:</p>
                            <p>Email:</p>
                        </div>
                        <div class="mx-4">
                            <p>@Model.GuideBooking?.UserName</p>
                            <p>@Model.GuideBooking?.Email</p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>
                            <p>Gender:</p>
                            <p>Phone Number:</p>
                        </div>
                        <div class="mx-4">
                            <p>@Model.GuideBooking?.Gender</p>
                            <p>@Model.GuideBooking?.PhoneNumber</p>
                        </div>
                    </div>
                </div>
            </div>
           <div class="d-inline-flex">
                <form asp-antiforgery=true method="post" id="bookingForm">
                    <input asp-for="Id" hidden />
                    <input asp-for="@Model.GuideBooking!.UserName" hidden />
                    <input asp-for="@Model.GuideBooking!.Email" hidden />
                    <input asp-for="@Model.GuideBooking!.PhoneNumber" hidden />
                    <input asp-for="@Model.GuideBooking!.Gender" hidden />
                    <input asp-for="@Model.GuideBooking!.EventDate" hidden />
                    <input asp-for="@Model.GuideBooking!.EventType" hidden />
                    <input asp-for="@Model.GuideBooking!.EventLocation" hidden />
                    <input asp-for="@Model.GuideBooking!.StartTime" hidden />
                    <input asp-for="@Model.GuideBooking!.EndTime" hidden />
                    <input asp-for="@Model.GuideBooking!.TimeInHour" hidden />
                    <input asp-for="@Model.GuideBooking!.GuideId" hidden />
                    <input asp-for="@Model.Booking!.TotalAmount" hidden />
                    <div class="d-inline-flex gap-2">
                        <button type="button" class="btn btn-danger" onclick="submitForm('/Booking/Guide')">Book</button>
                        <button type="button" class="btn btn-danger" onclick="submitForm('/Payment/Pay')">Pay</button>
                    </div>
                </form>
           </div>
        </div>
    </div>
    <div></div>
</div>

<script>
    function submitForm(actionUrl) {
        const form = document.getElementById("bookingForm");
        form.action = actionUrl; // Set the form action dynamically
        form.method = "post"; // Ensure the method is POST
        form.submit(); // Submit the form programmatically
    }
</script>