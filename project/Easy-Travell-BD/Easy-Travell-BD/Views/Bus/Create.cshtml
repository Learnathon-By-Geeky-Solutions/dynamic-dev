@model EasyTravel.Domain.Models.Bus

@{
    ViewData["Title"] = "Create";
}

<h2>Create Bus</h2>

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="BusServiceName" class="control-label">Bus Service Name</label>
        <input asp-for="BusServiceName" class="form-control" required />
        <span asp-validation-for="BusServiceName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="From" class="control-label">From (Starting Point)</label>
        <input asp-for="From" class="form-control" required />
        <span asp-validation-for="From" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="To" class="control-label">To (Destination)</label>
        <input asp-for="To" class="form-control" required />
        <span asp-validation-for="To" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rate" class="control-label">Rate (Price)</label>
        <input asp-for="Rate" class="form-control" required />
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServicesDetails" class="control-label">Service Details</label>
        <textarea asp-for="ServicesDetails" class="form-control"></textarea>
        <span asp-validation-for="ServicesDetails" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stoppages" class="control-label">Stoppages</label>
        <textarea asp-for="Stoppages" class="form-control"></textarea>
        <span asp-validation-for="Stoppages" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BusContact" class="control-label">Bus Contact</label>
        <input asp-for="BusContact" class="form-control" />
        <span asp-validation-for="BusContact" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Bus</button>
    </div>
</form>
