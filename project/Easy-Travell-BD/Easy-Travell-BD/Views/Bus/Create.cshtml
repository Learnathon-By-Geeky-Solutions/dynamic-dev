@model EasyTravel.Domain.Models.Bus

@{
    ViewData["Title"] = "Create";
}

<div class="card shadow-sm" style="max-width: 600px; margin: 20px auto; padding: 20px; border-radius: 10px;">
    <h2 class="card-title text-center">Create Bus</h2>
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label>
                Bus Service Name
                <input asp-for="BusServiceName" class="form-control" required />
            </label>
            <span asp-validation-for="BusServiceName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>
                From (Starting Point)
                <input asp-for="From" class="form-control" required />
            </label>
            <span asp-validation-for="From" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>
                To (Destination)
                <input asp-for="To" class="form-control" required />
            </label>
            <span asp-validation-for="To" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>
                Rate (Price)
                <input asp-for="Rate" class="form-control" required />
            </label>
            <span asp-validation-for="Rate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>
                Service Details
                <textarea asp-for="ServicesDetails" class="form-control"></textarea>
            </label>
            <span asp-validation-for="ServicesDetails" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>
                Stoppages
                <textarea asp-for="Stoppages" class="form-control"></textarea>
            </label>
            <span asp-validation-for="Stoppages" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>
                Bus Contact
                <input asp-for="BusContact" class="form-control" />
            </label>
            <span asp-validation-for="BusContact" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Create Bus</button>
        </div>
    </form>
</div>
