@model IEnumerable<EasyTravel.Domain.Entites.Bus>

@{
    ViewData["Title"] = "List";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Bus List</h2>
    <div class="row">
        @foreach (var bus in Model)
        {
            <div class="col-12 mb-3">
                <div class="card shadow-sm p-3 d-flex flex-row align-items-center">
                    <div class="me-3">
                        <img src="@bus.ImagePath" alt="@bus.OperatorName bus" class="bus-image img-fluid border rounded bg-light p-2" loading="lazy">

                             style="width: 60px; height: 60px; object-fit: contain;">

                    </div>
                    <div class="flex-grow-1">
                        <h5 class="card-title mb-1">@bus.OperatorName</h5>
                        <p class="mb-0">
                            <strong>Route:</strong> @bus.From to @bus.To<br />
                            <strong>Bus Type:</strong> @bus.BusType<br />
                            <strong>Departure:</strong> @bus.DepartureTime.ToString("yyyy-MM-dd HH:mm")<br />
                            <strong>Arrival:</strong> @bus.ArrivalTime.ToString("yyyy-MM-dd HH:mm")<br />
                            <strong>Rate:</strong> ৳@bus.Price
                        </p>
                    </div>
                    <div>
                        <a href="#" class="btn btn-success btn-sm">Book Ticket</a>
                    </div>
                </div>
            </div>
        }
    </div>

